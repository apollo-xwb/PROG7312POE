@page
@model MunicipalServicesApp.Pages.SearchEventsModel
@{
    ViewData["Title"] = "Search Events";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="mb-4">üîç Search Events</h2>
    
    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <strong>Info!</strong> @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
    
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üîç Search Criteria</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="SearchKeyword" class="form-label">Keyword</label>
                            <input name="SearchKeyword" id="SearchKeyword" class="form-control" 
                                   placeholder="Search in title or description..." />
                        </div>
                        
                        <div class="mb-3">
                            <label for="SearchCategory" class="form-label">Category</label>
                            <select name="SearchCategory" id="SearchCategory" class="form-select">
                                <option value="">-- All Categories --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="StartDate" class="form-label">Start Date</label>
                            <input name="StartDate" id="StartDate" class="form-control" type="date" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="EndDate" class="form-label">End Date</label>
                            <input name="EndDate" id="EndDate" class="form-control" type="date" />
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Search Events</button>
                            <a href="/Events" class="btn btn-secondary">Back to Events</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìã Search Results (@Model.FilteredEvents.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.FilteredEvents.Any())
                    {
                        <div class="event-grid">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Date</th>
                                            <th>Title</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var eventItem in Model.FilteredEvents)
                                        {
                                            <tr>
                                                <td>@eventItem.Date.ToString("MMM dd, yyyy")</td>
                                                <td><strong>@eventItem.Title</strong></td>
                                                <td>
                                                    <span class="badge bg-primary">@eventItem.Category</span>
                                                </td>
                                                <td>@eventItem.Description</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No events found. Try adjusting your search criteria.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
