<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Western Cape Municipal Services App</title>
    <link rel="icon" type="image/png" href="~/images/COCC.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/CPT Logo.png" alt="Cape Town Logo" class="brand-logo" />
                    <strong>WCMS</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ReportIssue">Report Issue</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Events">Events</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true" title="Coming soon">Service Request Status</a>
                            </li>
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    
        <div class="container-fluid d-flex flex-column min-vh-100 p-0">
            @{
                var currentPage = (string?)ViewContext.RouteData.Values["page"] ?? string.Empty;
            }
            @if (!string.Equals(currentPage, "/Index", StringComparison.OrdinalIgnoreCase))
            {
                <div class="container py-2">
                    <a href="/" class="btn btn-outline-primary btn-sm">‚Üê Back to Home</a>
                </div>
            }
            <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
        
            <footer class="footer bg-dark text-white text-center py-3 mt-auto w-100">
                <div class="container d-flex align-items-center justify-content-center gap-2">
                    <img src="~/images/COCC.png" alt="App Logo" class="footer-logo" />
                    <span>&copy; 2025 - Western Cape Municipal Services Portal - South African Municipal Services Portal</span>
                </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
