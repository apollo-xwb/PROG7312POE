@page
@model MunicipalServicesApp.Pages.EventsModel
@{
    ViewData["Title"] = "Events & Announcements";
    Layout = "_Layout";
}


<div class="container">
    <h2 class="mb-4">üìÖ Local Events & Announcements</h2>
    
    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>Info!</strong> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Debug"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Debug:</strong> @TempData["Debug"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <div class="row">
            <!-- Action Buttons -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">‚ûï Add New Event</h5>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">Create a new event for the community.</p>
                        <a href="/AddEvent" class="btn btn-primary btn-lg w-100">Add New Event</a>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">üîç Search Events</h5>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">Find events by category, date, or keyword.</p>
                        <a href="/SearchEvents" class="btn btn-success btn-lg w-100">Search Events</a>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">üìä Analytics</h5>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">View search stats and recommendations.</p>
                        <a href="/Analytics" class="btn btn-info btn-lg w-100">Open Analytics</a>
                    </div>
                </div>
            </div>
        
        <!-- Events Display -->
        <div class="col-md-8">
            
            <!-- Events Grid -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìã Events (@Model.FilteredEvents.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.FilteredEvents.Any())
                    {
                        <div class="event-grid">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Date</th>
                                            <th>Title</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var eventItem in Model.FilteredEvents)
                                        {
                                            <tr>
                                                <td>@eventItem.Date.ToString("MMM dd, yyyy")</td>
                                                <td><strong>@eventItem.Title</strong></td>
                                                <td>
                                                    <span class="badge bg-primary">@eventItem.Category</span>
                                                </td>
                                                <td>@eventItem.Description</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No events found. Try adjusting your search criteria or add a new event.</p>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Recommendations -->
            @if (Model.Recommendations.Any())
            {
                <div class="recommendation-box mt-4">
                    <h5 class="mb-3">üéØ Recommended Events</h5>
                    <div class="list-group">
                        @foreach (var recommendation in Model.Recommendations)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@recommendation.Title</h6>
                                    <small>@recommendation.Date.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mb-1">@recommendation.Description</p>
                                <small class="text-muted">Category: @recommendation.Category</small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
}
